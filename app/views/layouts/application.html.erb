<!DOCTYPE html>
<html>
  <head>
    <title>Viva!</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>
  </head>

  <nav>
    <%if session[:user_id] %>
        <%= link_to "Home", welcomes_path %>
        <%= link_to User.find(session[:user_id]).username, user_path(session[:user_id])%>
        <%= link_to "Users", users_path %>
        <%= link_to "Activities", activities_path %>
        <%= link_to "New Item", new_list_path %>
        <%= link_to "Logout", logout_path %>
        <%= form_tag(activities_search_path	, method: :get) do %>
        <%= label_tag(:search, "Search by Activity:") %>
        <%= text_field_tag :search %>
        <%= submit_tag "Search" %>
      <% end %>

      <%= form_tag(users_search_path	, method: :get) do %>
      <%= label_tag(:search, "Search by User:") %>
      <%= text_field_tag :search %>
      <%= submit_tag "Search" %>
    <% end %>
  <% end %>
</nav>

  <body>
    <%= yield %>
  </body>
</html>
